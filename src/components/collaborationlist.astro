---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'
import { Icon } from 'astro-iconify'

export interface Props {
  collaborations: CollectionEntry<'collaborations'>[]
}

const { collaborations } = Astro.props
---

<aside aria-label="Collaborations" class="bg-gray-50 py-4 dark:bg-gray-800 lg:py-8">
  <div class="mx-auto px-4">
    <div class="grid grid-cols-2 gap-4 lg:grid-cols-3 xl:grid-cols-4">
      {
        collaborations.map((collab) => (
          <article class="max-w-xs">
            <a href={'/collaborations/' + collab.id}>
              <Image src={collab.data.image!} class="mb-5 rounded-lg" alt={collab.data.title} />
            </a>
            <div class="flex">
              <h2 class="mb-2 text-xl font-bold leading-tight text-gray-900 dark:text-white">
                <a href={'/collaborations/' + collab.id}>{collab.data.title}</a>
              </h2>
            </div>
            <p class="mb-4 text-gray-500 dark:text-gray-400">{collab.data.description}</p>
            <a
              href={'/collaborations/' + collab.id}
              class="inline-flex items-center rounded-lg bg-primary-700 px-5 py-2.5 text-sm font-medium text-white hover:bg-primary-800 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
            >
              <Icon class="-ms-2 me-2 size-5" name="mdi:eye" />
              View collaboration
            </a>
          </article>
        ))
      }
    </div>
  </div>
</aside>
