---
import type { CollectionEntry } from 'astro:content'

export interface Props {
  base: string
  prev?: CollectionEntry<'blog'> | CollectionEntry<'partner'>
  next?: CollectionEntry<'blog'> | CollectionEntry<'partner'>
}

const { base, prev, next } = Astro.props
---

<dl class='mt-12 flex border-t border-blue-300 pt-6 dark:border-blue-700'>
  {
    prev && (
      <div class='mr-auto text-left'>
        <dt class='font-display text-sm text-gray-800 font-medium dark:text-gray-200'>Prev</dt>
        <dd class='mt-1'>
          <a
            class='text-base text-blue-600 font-semibold hover:bg-blue-200 dark:text-blue-300 hover:text-pink-600'
            href={base + prev.id}
          >
            <span aria-hidden='true'>←</span>
            {prev.data.title}
          </a>
        </dd>
      </div>
    )
  }
  {
    next && (
      <div class='ml-auto text-right'>
        <dt class='font-display text-sm text-gray-800 font-medium dark:text-gray-200'>Next</dt>
        <dd class='mt-1'>
          <a
            class='text-base text-blue-600 font-semibold hover:bg-blue-200 dark:text-blue-300 hover:text-pink-600'
            href={base + next.id}
          >
            {next.data.title}
            <span aria-hidden='true'>→</span>
          </a>
        </dd>
      </div>
    )
  }
</dl>
