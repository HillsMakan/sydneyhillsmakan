---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'

import Site from '../site.ts'

const partners = await getCollection('partner', (partner) => !partner.data.draft)
---

<section class="bg-white dark:bg-gray-800">
  <div
    class="mx-auto mt-2 grid max-w-(--breakpoint-xl) rounded-lg px-4 py-8 lg:grid-cols-12 lg:gap-8 lg:py-16 xl:gap-0"
  >
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1
        class="mb-4 max-w-2xl text-4xl font-extrabold leading-none tracking-tight dark:text-white md:text-5xl xl:text-6xl"
      >
        ğŸœ Welcome to HMG International â€“ Where Flavor Meets Community! ğŸŒ
      </h1>
      <p
        class="mb-2 max-w-2xl font-light text-gray-600 dark:text-gray-400 md:text-lg lg:mb-8 lg:text-xl"
      >
        {Site.description}
      </p>
      <p
        class="mb-6 max-w-2xl italic text-gray-500 dark:text-gray-500 md:text-base lg:mb-8 lg:text-lg"
      >
        Note: Site last updated {
          Site.buildTime.toLocaleString('en-AU', {
            dateStyle: 'short',
            timeStyle: 'short',
            timeZone: 'Australia/Sydney'
          })
        }. We currently have {partners.length} partners.
      </p>
      <a
        href={Site.link}
        class="mr-3 inline-flex items-center justify-center rounded-lg bg-primary-700 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:focus:ring-primary-900"
      >
        Join
        <svg
          class="-mr-1 ml-2 size-5"
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill-rule="evenodd"
            d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path></svg
        >
      </a>
      <a
        href="/about"
        class="inline-flex items-center justify-center rounded-lg border border-gray-300 px-5 py-3 text-center text-base font-medium text-gray-900 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 dark:border-gray-700 dark:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-800"
      >
        About Us
      </a>
    </div>
    <div class="mt-4 lg:col-span-5 lg:mt-0">
      <Image src={Site.image} class="rounded-lg" alt="hero" />
    </div>
  </div>
</section>
