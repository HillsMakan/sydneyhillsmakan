---
import { Image } from 'astro:assets'

import CountryImage from '../assets/images/partnersbycountry.jpg'
import CategoryImage from '../assets/images/partnersbycategory.jpg'
import CuisineImage from '../assets/images/cuisines.jpg'
import CollaborationImage from '../assets/images/meetourpartners.jpg'

const features = [
  {
    title: 'Partners by Country',
    link: '/countries',
    image: CountryImage
  },
  {
    title: 'Partners by Category',
    link: '/categories',
    image: CategoryImage
  },
  {
    title: 'Partners by Cuisine',
    link: '/cuisines',
    image: CuisineImage
  },
  {
    title: 'Collaborations',
    link: '/collaborations',
    image: CollaborationImage
  }
]
---

<section>
  <div class="mx-auto max-w-(--breakpoint-xl) px-2 py-8 sm:py-8">
    <div class="mb-8 max-w-(--breakpoint-md)">
      <h2 class="mb-4 text-4xl font-extrabold tracking-tight text-gray-900 dark:text-white">
        Explore our Partners
      </h2>
      <p class="text-gray-500 dark:text-gray-400 sm:text-xl">
        View Partners in various locations and categories
      </p>
    </div>
    <div class="space-y-8 md:grid md:grid-cols-2 md:gap-12 md:space-y-0 lg:grid-cols-3">
      {
        features.map((feature) => (
          <a class="rounded-lg border dark:border-gray-700" href={feature.link}>
            <Image
              class="h-64 w-full rounded-lg object-cover md:h-48"
              src={feature.image}
              alt={feature.title}
            />
            <h3 class="mb-2 text-center text-xl font-bold dark:text-white">{feature.title}</h3>
            {/* <p class="text-gray-500 dark:text-gray-400">
            Plan it, create it, launch it. Collaborate seamlessly with all the organization and hit
            your marketing goals every month with our marketing plan.
          </p> */}
          </a>
        ))
      }
    </div>
  </div>
</section>
